{
  "name": "@blm456/utilities",
  "version": "0.0.0-base",
  "description": "A group of exports that provide basic utility and has no function on its own",
  "keywords": [
    "node.js",
    "utilities"
  ],
  "homepage": "https://github.com/blm456/nodejs-utilities",
  "bugs": {
    "url": "https://github.com/blm456/nodejs-utilities/issues"
  },
  "license": "MIT",
  "main": ".dist/index.js",
  "scripts": {
    "build": "tspc --build",
    "build:clean": "run-s clean build",
    "build:watch": "run-s clean:watch watch",
    "test": "node .dist/test.js",
    "test:watch": "nodemon /.watch/index.js",
    "clean": "run-s clean:dist clean:watch",
    "clean:dist": "rimraf .dist",
    "clean:watch": "rimraf .watch",
    "watch": "tspc --watch --outDir ./.watch"
  },
  "author": {
    "name": "Brandon Martin",
    "email": "brandon@developedincode.com",
    "url": "https://www.developedincode.com"
  },
  "packageManager": "pnpm@10.4.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/blm456/nodejs-utilities.git"
  },
  "devDependencies": {
    "@types/node": "^22.13.8",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "ts-patch": "^3.3.0",
    "typescript": "^5.8.2",
    "typescript-transform-paths": "^3.5.3"
  }
}
